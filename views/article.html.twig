<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Twig PHP</title>
</head>
<body>
{% for article in articles %}
    {% if article.enabled == true %}
        <article>
            <header>
                <h1>{{ article.name|upper }}</h1>
            </header>
            <p> {{ article.content }} </p>
            <footer>
                <time datetime="{{ article.date|date('c') }}">{{ article.date|date('d-m-y') }}</time>
            </footer>
        </article>
    {% endif %}
{% endfor %}
</body>
</html>